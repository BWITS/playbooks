#!upstart
# http://stackoverflow.com/a/11276071/472153
description "Docker image '{{ image }}'"

start on started mountall
stop  on shutdown

# Automatically Respawn:
respawn
respawn limit 5 5

exec /bin/bash -c "sleep 20; ( echo '--'; date; echo '--'; {{ docker_command }} ) >> '/var/log/{{ app_name }}.log' 2>&1"
