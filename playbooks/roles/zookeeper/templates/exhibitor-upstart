#!upstart
description "Exhibitor"

start on started mountall
stop  on shutdown

# Automatically Respawn:
respawn
respawn limit 5 5

exec {{ ubuntu.bash }} -c "java -jar '{{ exhibitor_jar }}' -c file --port {{ exhibitor_port | default( exhibitor.port ) }} >> '{{ ubuntu.log_dir }}/exhibitor.log' 2>&1"
