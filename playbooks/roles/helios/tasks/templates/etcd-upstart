description "etcd"

start on runlevel [2345]
stop  on runlevel [!2345]

respawn
respawn limit unlimited

script
    [ -r {{ helios.master.etcd.config }} ] && . {{ helios.master.etcd.config }}
    {{ etcd_bin }} $ETCD_OPTS
end script

# prevent respawning more than once every second
post-stop exec sleep 1
